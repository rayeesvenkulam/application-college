{{#if messages.success}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{messages.success}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

{{/if}}

{{#if messages.error}}
<div class="alert alert-error alert-dismissible fade show" role="alert">
    {{messages.error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Users</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create User</h5>
                        <form action="" method="post">
                            <div class="row">
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Name</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">User Name</label>
                                    <input type="text" class="form-control" name="username" required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Password</label>
                                    <input type="password" class="form-control" name="password" required>
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Confirm Password</label>
                                    <input type="password" class="form-control" name="cpassword" required>
                                </div>
                            </div>

                            <div class="row-sm-6 mb-3">
                                <label class="col-sm-2 col-form-label">User Type</label>
                                <div class="col-sm-6 mb-3">
                                    <select class="form-select" name="type" id="userType"
                                        aria-label="Default select example" required>
                                        <option value="">Select User Type</option>
                                        <option value="STUDENT">STUDENT</option>
                                        <option value="TUTOR">TUTOR</option>
                                        <option value="HOD">HOD</option>
                                        <option value="PRINCIPAL">PRINCIPAL</option>
                                        <option value="OFFICE">OFFICE</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3" id="studentDetails" style="display: none;">
                                <!-- additional fields for student details -->
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Branch</label>
                                    <input type="text" class="form-control" name="branch">
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Semester</label>
                                    <input type="number" class="form-control" name="semester">
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Adm No</label>
                                    <input type="text" class="form-control" name="adm_no">
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Adm Year</label>
                                    <input type="number" class="form-control" name="adm_year" value="1990">
                                </div>

                                {{!-- <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Adm Year</label>
                                    <select class="form-select" name="adm_year" aria-label="Select Adm Year">
                                        <option value="">Select Adm Year</option>
                                        <!-- Generate options for years from 2000 to 2030 -->
                                        {{#each range 2000 2030}}
                                        <option value="{{this}}">{{this}}</option>
                                        {{/each}}
                                    </select>
                                </div> --}}

                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Quota</label>
                                    <input type="text" class="form-control" name="quota">
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">University Reg No</label>
                                    <input type="text" class="form-control" name="university_no">
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Mobile1</label>
                                    <input type="text" class="form-control" name="mobile1">
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label for="inputText" class="col-form-label">Mobile2</label>
                                    <input type="text" class="form-control" name="mobile2">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Event listener for the user type select element
        $('#userType').change(function () {
            var selectedType = $(this).val();
            if (selectedType === 'STUDENT') {
                $('#studentDetails').show(); // Show the student details fields
            } else {
                $('#studentDetails').hide(); // Hide the student details fields
            }
        });
    });

</script>