<main id="main" class="main">

  <div class="pagetitle">
    <h1>Application Status</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Forms</li>
        <li class="breadcrumb-item active">Elements</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">


            <div class="col-sm-12 ">
              <center><b>Application Status</b></center><br>
              <div class="table-responsive">
                <table class="table ">
                  <tbody>
                    <tr>
                      <td></td>
                      <td>{{formatDate data.application.request_date "DD-MM-YYYY"}}</td>
                    </tr>

                    <tr>
                      <td>Request Type</td>
                      <td>
                        {{data.type_name}}
                      </td>
                    </tr>
                    <tr>
                      <td>Request Description</td>
                      <td>
                        {{data.description}}
                      </td>
                    </tr>
                    <tr data-bs-toggle="tooltip" data-bs-placement="top"
                      data-bs-original-title="{{data.tutor_comments}}">
                      <td>Tutor</td>
                      <td>
                        {{data.tutor}}
                      </td>
                    </tr>
                    <tr>
                      <td><b>Current Status</b> </td>
                      <td>
                        <b
                          class="{{#if (or (eq data.status 'Rejected by Tutor') (eq data.status 'Rejected by HOD') (eq data.status 'Rejected by Principal'))}}text-danger{{else}}text-success{{/if}}">
                          {{data.status}}
                        </b>
                      </td>

                    </tr>
                    <tr>
                      <td><b>Current Reviewer</b> </td>
                      <td>
                        <b>{{data.current_reviewer}}</b>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

              {{#if (eq data.current_reviewer "Issued")}}
              <a href="{{data.issued_file}}" download class="btn btn-primary">Download</a>
              {{/if}}


            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

</main>